@model LabApp.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1> Admin Login</h1>

<form asp-action="OnLogin" asp-controller="Login" method="post">
    <div>
        Username: <input type="text" asp-for="Username" />
    </div>
    <div>
        Password: <input type="password" asp-for="Password" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>

